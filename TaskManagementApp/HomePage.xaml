<Page x:Class="TaskManagementApp.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManagementApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage"
      Background="White" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lbxTasks" HorizontalAlignment="Left" Height="260" Margin="148,125,0,0" VerticalAlignment="Top" Width="554" Grid.RowSpan="2"/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button x:Name="btnAddTask" Content="Add" HorizontalAlignment="Center" Margin="40 20" VerticalAlignment="Top" Width="75" Click="btnAddTask_Click"/>
            <Button x:Name="btnEdit" Content="Edit" HorizontalAlignment="Center" Margin="40 20" VerticalAlignment="Top" Width="75" Click="btnEdit_Click"/>
            <Button x:Name="btnDeleteTask" Content="Delete" HorizontalAlignment="Center" Margin="40 20" VerticalAlignment="Top" Width="75" Click="btnDeleteTask_Click"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Column="1" Margin="0,100,0,5.473">
            <Button Content="Complete" Margin="0 30" Width="75"/>
            <Button Content="Save" Margin="0 30" Width="75"/>
            <Button Content="Load" Margin="0 30" Width="75"/>
        </StackPanel>
    </Grid>
</Page>
